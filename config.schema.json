{
  "pluginAlias": "MercedesPlatform",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "<h1 align='center'>INFO</h1> <p align='center'>Go to <b>http://localhost:PORT</b> to authenticate the plugin!</p> <p align='center'>If <b>Remote Authentication</b> is enabled go to <b>http://${{HOSTNAME}}:PORT</b> to authenticate the plugin!</p> <p align='center'> <i><b>Note:</b> Replace <b>PORT</b> with the port entered for the respective car!</i></p>",
  "footerDisplay": "For documentation please see [GitHub repository](https://github.com/SeydX/homebridge-mercedesme)",      
  "schema": {
    "polling": {
      "title": "Polling",
      "description": "Mercedes Me API Polling in seconds",
      "type": "integer",
      "required": false,
      "placeholder": 60,
      "minimum": 60
    },
    "cars": {
      "title": "Cars",
      "required": true,
      "type": "array",
      "items": {
        "name": "Car Config",
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "description": "The name of your car in HomeKit",
            "type": "string",
            "required": true
          },
          "clientID": {
            "title": "Client ID",
            "description": "Client ID from https://developer.mercedes-benz.com/",
            "type": "string",
            "required": true
          },
          "clientSecret": {
            "title": "Client Secret",
            "description": "Client Secret from https://developer.mercedes-benz.com/",
            "type": "string",
            "required": true
          },
          "vin": {
            "title": "Vehicle Identification Number (VIN)",
            "description": "VIN of the car",
            "type": "string",
            "required": true
          },
          "port": {
            "title": "Port",
            "description": "Server port for authentication process",
            "type": "integer",
            "required": true
          },
          "model": {
            "title": "Model",
            "description": "Car model",
            "type": "string",
            "required": false
          },
          "maxRange": {
            "title": "Max Range",
            "description": "Maximum distance after full tank load",
            "type": "integer",
            "required": false
          },
          "remoteAuth":{
            "titel": "Remote Authentication",
            "type": "object",
            "properties": {
              "active": {
                 "description": "Activate only if you cannot continue the authentication process on the device on which this plugin is installed. Remote authentication is used to authenticate this plugin from another device.",
                 "type": "boolean",
                 "default": false
              },
              "code": {
                "description": "Manually obtained code during remote access from the url",
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
  "layout": [
    {
      "key": "cars",
      "type": "array",
      "orderable": false,
      "buttonText": "Add new Car",
      "items": [ 
        "cars[].name",
        "cars[].clientID",
        "cars[].clientSecret",
        "cars[].vin",
        "cars[].port",
        "cars[].model", 
        "cars[].maxRange",
        {
          "key": "cars[].remoteAuth",
          "type": "section",
          "title": "Remote Authentication",
          "expandable": true,
          "expanded": false,
          "items": [
            "cars[].remoteAuth.active",
            "cars[].remoteAuth.code"
          ]
        }
      ]
    }
  ]
} 